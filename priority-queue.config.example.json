{
  "port": 8080,
  "workers": 6,
  "priorityQueue": {
    "enabled": true,
    "maxConcurrentInvestigations": 5,
    "maxQueueSize": 100,
    "investigationTimeoutMs": 300000,
    "preemptionEnabled": true,
    "preemptionThreshold": 0.3,
    "burstModeEnabled": true,
    "burstModeConcurrency": 8,
    "burstModeThreshold": 2,
    
    "priorityWeights": {
      "keywords": 0.3,
      "serviceImpact": 0.4,
      "timeContext": 0.2,
      "historical": 0.1
    },
    
    "services": [
      {
        "name": "payment-service",
        "criticality": "critical",
        "businessImpact": 1.0,
        "userCount": 100000
      },
      {
        "name": "auth-service",
        "criticality": "critical",
        "businessImpact": 0.9,
        "userCount": 500000
      },
      {
        "name": "api-gateway",
        "criticality": "high",
        "businessImpact": 0.8,
        "userCount": 200000
      },
      {
        "name": "user-service",
        "criticality": "high",
        "businessImpact": 0.7,
        "userCount": 300000
      },
      {
        "name": "notification-service",
        "criticality": "medium",
        "businessImpact": 0.5,
        "userCount": 50000
      },
      {
        "name": "analytics-service",
        "criticality": "low",
        "businessImpact": 0.3,
        "userCount": 1000
      }
    ],
    
    "businessHours": {
      "start": 8,
      "end": 18,
      "timezone": "America/New_York"
    },
    
    "criticalKeywords": [
      "critical", "emergency", "disaster", "outage", "down", "unavailable",
      "payment.*fail", "transaction.*error", "billing.*issue",
      "database.*crash", "db.*down", "data.*corruption",
      "security.*breach", "unauthorized.*access", "attack"
    ],
    
    "highPriorityKeywords": [
      "high", "urgent", "severe", "major", "timeout", "connection.*refused",
      "service.*unavailable", "memory.*leak", "cpu.*spike", "disk.*full",
      "authentication.*fail", "login.*issue", "502", "503", "504"
    ],
    
    "mediumPriorityKeywords": [
      "warning", "warn", "medium", "moderate", "slow", "performance",
      "latency", "delay", "retry", "backoff", "rate.*limit", "throttle"
    ]
  },
  
  "llm": {
    "provider": "gemini",
    "model": "gemini-pro"
  },
  
  "llmCache": {
    "redis": {
      "host": "localhost",
      "port": 6379,
      "keyPrefix": "seraph:cache:"
    },
    "similarityThreshold": 0.85,
    "ttlSeconds": 3600
  },
  
  "alertManager": {
    "url": "http://localhost:9093/api/v2/alerts"
  },
  
  "rateLimit": {
    "window": 60000,
    "maxRequests": 200
  },
  
  "recentLogsMaxSizeMb": 20,
  "reportRetentionDays": 30,
  "verbose": true
}